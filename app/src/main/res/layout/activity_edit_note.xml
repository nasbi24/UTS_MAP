<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NotesActivity">

    <!-- Row for Back and Save buttons -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingRight="9dp"
        android:paddingLeft="9dp"
        android:paddingTop="9dp"
        android:gravity="start">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back"
            android:layout_width="55dp"
            android:layout_height="42dp"
            android:src="@drawable/icon_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:scaleType="centerInside" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linebreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/button_row">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginTop="4dp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linebreak"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/textboxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <Spinner
                android:id="@+id/spinner_note_category"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                />
            <!-- Input Judul Notes -->
            <EditText
                android:id="@+id/et_note_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Enter Note Title"
                android:padding="8dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Input Isi Notes -->
            <EditText
                android:id="@+id/et_note_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="top"
                android:hint="Enter Note Content"
                android:minHeight="300dp"
                android:padding="16dp"
                android:textSize="16sp"
                android:background="@null"/>

            <!-- Reminders Section -->


            <LinearLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/reminder_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />



            <!-- Add Images Section -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:windowSoftInputMode="adjustResize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="9dp"
        tools:ignore="MissingConstraints,NotSibling"
        android:background="@color/blue">

        <ImageButton
            android:id="@+id/btn_add_image"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add_image"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Image" />

        <ImageButton
            android:id="@+id/btn_add_reminder"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add_reminder"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Add Reminder" />

        <ImageButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:src="@drawable/ic_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Save" />


    </LinearLayout>
    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/button_row"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>