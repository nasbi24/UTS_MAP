<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="28dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".EditProfileFragment">

    <ImageView
        android:id="@+id/ivEditProfilePic"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_profileplaceholder" />


    <TextView
        android:id="@+id/btnUploadPic"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_button_setting"
        android:drawableStart="@drawable/ic_edit"
        android:drawablePadding="12dp"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="Change Profile Picture"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnCapturePic"
        app:backgroundTint="@null"
        android:background="@drawable/button_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Capture Image" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="2dp"
        android:text="Full Name"
        android:textColor="@color/gray"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEditName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/input_field"
        android:hint="Enter New Name"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="#888888"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="2dp"
        android:text="Email Address"
        android:textColor="@color/gray"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEditEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/input_field"
        android:hint="Enter New Email"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textColorHint="#888888"
        android:textSize="16sp" />

    <TextView
        android:layout_marginStart="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_warn"
        android:textColor="@color/gray" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Save"
        app:backgroundTint="@null"
        android:background="@drawable/button_background"/>

</LinearLayout>